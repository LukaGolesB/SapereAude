@model Suggestion

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Uredi prijedlog:</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span><br />

            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span><br />

            <label asp-for="CategoryFK"></label><br />
            @Html.DropDownListFor(model => model.CategoryFK, ViewBag.dropdownVD as SelectList, new { @class = "form-control" })
            <span asp-validation-for="Comment" class="text-danger"></span><br />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Spremi</button>
        <a asp-controller="Suggestion" asp-action="Index" class="btn btn-secondary" style="width:150px;">Povratak</a>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
