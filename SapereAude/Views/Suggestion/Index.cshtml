@model List<Suggestion>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Prijedlozi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Suggestion" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Dodaj prijedlog
            </a>
        </div>
    </div><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Naslov/tema teksta
                </th>
                <th>
                    Opis
                </th>
                <th>
                    Kategorija
                </th>
                <th>
                    Datum
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td witdh="50%">
                        @obj.Title
                    </td>
                    <td witdh="50%">
                        @obj.Comment
                    </td>
                    <td witdh="50%">
                        @obj.Category.CategoryName
                    </td>
                    <td witdh="50%">
                        @obj.CreatedDate
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Suggestion" asp-action="Edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i>Uredi
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Suggestion" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash-fill"></i>Izbriši
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
